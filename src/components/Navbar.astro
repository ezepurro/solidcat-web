---
const { t, lang } = Astro.props;

interface NavbarItem {
    title: string;
    url: string;
}
---

<nav class="h-22 flex items-center justify-between px-10 w-full mx-auto max-w-screen-xl">
    <a href={`/${lang}`} class="flex items-center">
        <img src="solidcat-box2.svg" alt="Solid Cat Brand" class="h-12">
    </a>

    <div class="flex items-center space-x-8 ml-auto">
        {
            t.items.map((item: NavbarItem) => (
                <a href={`${lang}${item.url}`} class="text-white text-lg hover:opacity-80 transition">
                    {item.title}
                </a>
            ))
        }
        <a href={`${lang}${t.getStartedButton.url}`} class="text-black bg-[#fbf0ff] text-lg border rounded-xl px-4 py-2 hover:text-[#fbf0ff] hover:bg-[#2d1434] transition font-bold">
            {t.getStartedButton.title}
        </a>
    </div>
</nav>
