---
const { t } = Astro.props;
---

<div class="relative w-full">
    <div class="bg-[linear-gradient(to_right,#4f4f4f2e_1px,transparent_1px),linear-gradient(to_bottom,#4f4f4f2e_1px,transparent_1px)] bg-[size:14px_24px]">
        <div class="h-auto flex items-center justify-center p-4 md:p-10 max-w-screen-xl mx-auto mb-10 text-center ">
            <div class="my-20 text-center flex flex-col items-center">
                <h2 class="text-2xl md:text-4xl font-bold leading-tight max-w-[800px] motion-translate-y-in-150">{t.title}</h2>
                {
                    (t.subtitle) ? <p class="mb-8 my-2">{t.subtitle}</p> : null
                }
            </div>
        </div>
    </div>
</div>

