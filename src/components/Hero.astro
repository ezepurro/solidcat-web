---
const { t, lang } = Astro.props;

interface clientItem {
    title: string,
    file: string 
}
---

<section class="min-h-[calc(100vh-20rem)] flex items-center justify-center p-4 md:p-10 max-w-screen-xl mx-auto text-center">
    <div class="w-full">
        <div class="my-20 text-center flex flex-col items-center">
            <div class="motion-translate-y-in-25">
                <h2 class="text-2xl md:text-4xl font-bold leading-tight max-w-[400px]">{t.title}</h2>
                <p class="mb-8 my-2">{t.subtitle}</p>
            </div>
            <a href={`/${lang}/get-started`} class="font-medium text-get-started border py-2 px-4 hover:bg-solidcat-light hover:text-solidcat-primary transition duration-400 ease-in-out rounded-xl hover:scale-110 motion-translate-y-in-150 motion-delay-300 motion-opacity-in-0">
                {t.getStartedButton}
            </a>
        </div>
        <div class="motion-translate-y-in-150 motion-opacity-in-0 motion-delay-500">
            <p>{t.trustedBy}</p>
            <div class="flex flex-wrap justify-center items-center gap-4 mt-4">
                {
                    t.clients.map((client:clientItem) => {
                        const Component = client.file;
                        return <Component />
                    })
                }
            </div>
        </div>
    </div>
</section>