---
import Layout from '../../layouts/Layout.astro';

import Navbar from '../../components/Navbar.astro';
import Footer from '../../components/Footer.astro';

import translations from '../../i18n/pricing';
import navbarFooterTranslations from '../../i18n';

export function getStaticPaths() {
  return [
    { params: { lang: 'en' } },
    { params: { lang: 'es' } },
  ];
}

const { lang } = Astro.params;
const locale = lang === 'es' ? 'es' : 'en'; 
const t = translations[locale];
const navbarFooter = navbarFooterTranslations[locale];
---

<Layout lang={lang} title={t.pageTitle}>
  <div class="h-screen bg-linear-to-b from-solidcat-primary to-black text-solidcat-light">
    <Navbar t={navbarFooter.navbar} lang={lang} />
    <hr>
    <h3 class="text-center text-4xl font-black">{t.title}</h3>
  </div>
  <Footer t={navbarFooter.footer} lang={lang} />
</Layout>
