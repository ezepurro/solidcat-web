---
import translations from '../i18n';
import Layout from '../layouts/Layout.astro';

export function getStaticPaths() {
  return [
    { params: { lang: 'en' } },
    { params: { lang: 'es' } },
  ];
}

const { lang } = Astro.params;
const locale = lang === 'es' ? 'es' : 'en'; 
const t = translations[locale];
---


<Layout lang={lang}>
	<h1>{t.welcome}</h1>
</Layout>