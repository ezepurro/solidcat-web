---
const { t, lang } = Astro.props;

interface clientItem {
    title: string,
    file: string 
}
---

<section class="h-auto flex items-center justify-center p-4 md:p-10 max-w-screen-xl mx-auto mb-10 text-center mt-10">
    <div class="w-full">
        <div class="my-20 text-center flex flex-col items-center">
            <h2 class="text-2xl md:text-4xl font-bold leading-tight max-w-[400px]">{t.title}</h2>
            <p class="mb-8 my-2">{t.subtitle}</p>
            <a href={`${lang}/get-started`} class="font-medium text-[17px] border py-2 px-4 hover:bg-[#fbf0ff] hover:text-[#2d1434] transition duration-400 ease-in-out rounded">
                {t.getStartedButton}
            </a>
        </div>
        <div>
            <p>{t.trustedBy}</p>
            <div class="flex flex-wrap justify-center items-center gap-4 mt-4">
                {
                    t.clients.map((client:clientItem) => {
                        const Component = client.file;
                        return <Component />
                    })
                }
            </div>
        </div>
    </div>
</section>