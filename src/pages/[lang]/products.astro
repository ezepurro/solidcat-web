---
import Layout from '../../layouts/Layout.astro';

import Navbar from '../../components/Navbar.astro';
import PagesHero from '../../components/PagesHero.astro';
import Footer from '../../components/Footer.astro';

import translations from '../../i18n/products';
import navbarFooterTranslations from '../../i18n';
import ProductsList from '../../components/products/ProductsList.astro';
import Slogan from '../../components/Slogan.astro';

export function getStaticPaths() {
  return [
    { params: { lang: 'en' } },
    { params: { lang: 'es' } },
  ];
}

const { lang } = Astro.params;
const locale = lang === 'es' ? 'es' : 'en'; 
const t = translations[locale];
const navbarFooter = navbarFooterTranslations[locale];
---

<Layout lang={lang} title={t.pageTitle}>
  <div class="bg-linear-to-b from-solidcat-primary to-black text-solidcat-light">
    <Navbar t={navbarFooter.navbar} lang={lang} />
    <hr>
    <PagesHero t={t.title} />
    <div class="mx-2 md:mx-0">
      <Slogan t={navbarFooter.slogan} />
      <ProductsList t={t.productsList} />
    </div>
  </div>
  <Footer t={navbarFooter.footer} lang={lang} />
</Layout>
